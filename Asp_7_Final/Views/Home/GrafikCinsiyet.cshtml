<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>GrafikCinsiyetView</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <canvas id="cinsiyetChart" width="40" height="40"></canvas>

    <script>
        var cinsiyetData = @Html.Raw(Json.Serialize(Model));

        var ctx = document.getElementById('cinsiyetChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Erkek', 'Kadın', 'Diğer'],
                datasets: [{
                    label: 'Cinsiyet Dağılımı',
                    data: cinsiyetData,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.5)',
                        'rgba(54, 162, 235, 0.5)',
                        'rgba(255, 206, 86, 0.5)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
</body>
</html>
